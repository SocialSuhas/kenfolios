/* kf-join-frontend v6.4 — full updated frontend script
   - Adds responsive .kf-order-wrapper/.kf-member-box styles (injected)
   - Removes visible order URL / "pay later" copy from saved notice
   - Coupon input + Apply button stacked (Apply centered)
   - Editable fields responsive (stack on small screens)
   - Adds order loader: detects ?order=REF and fetches order from worker, replaces form in-place
   - NEW: Lazy-load Razorpay checkout.js only when order summary / payment is active
*/
(function(){
  if (window.__KF_JOINFORM_V6_3) return;
  window.__KF_JOINFORM_V6_3 = true;

 /* -------- Auto-redirect activation URL → Telegram bot -------- */
(function kfActivationAutoRedirect(){
  try {
    var url = new URL(window.location.href);
    var token = url.searchParams.get('activation');

    if (!token) return; // not an activation URL → do nothing

    token = token.trim();
    if (!token) return;

    // Build Telegram deep link: @kfactivationbot
    var telegramUrl = 'https://t.me/kfactivationbot?start=' + encodeURIComponent(token);

    // Use replace() so the activation URL isn't left in browser history
    window.location.replace(telegramUrl);
  } catch (e) {
    console.error('KF activation auto-redirect error:', e);
  }
})();

 
  /* ------------------ CSS Injection (responsive classes) ------------------ */
  (function injectKFStyles(){
    const css = `
/* Wrap entire order UI */
